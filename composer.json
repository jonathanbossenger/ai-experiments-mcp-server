{
    "name": "jonathanbossenger/wp-mcp-server-demo",
    "description": "Implements a basic MCP server using Abilities API and the MCP Adapter",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Jonathan Bossenger",
            "email": "jonathanbossenger@gmail.com"
        }
    ],
    "require": {
        "wordpress/abilities-api": "^0.3.0",
        "wordpress/mcp-adapter": "dev-trunk"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/WordPress/mcp-adapter"
        }
    ],
    "config": {
        "allow-plugins": {
            "automattic/jetpack-autoloader": true
        }
    }
}
